/**
 *  Flight Performance run instance config
 *  (syntax http://groovy.codehaus.org/ConfigSlurper)
 */

perf {
    flight {
        run {
            instance {
                id = "CacheRW"

                loadId = "SizeMedium"

                configId = "ehcachereadwrite"
                configToApplyList = [ "layermon", "layermon_ehcachereadwrite" ]

                numberSamples = 3 // was 30
                numberUsersPerSample = 1

                saveLogSize = true

                perfLogFormat = "layermon"
            }
        }
    }
}
