/**
 *  Flight Performance run instance config
 *  (syntax http://groovy.codehaus.org/ConfigSlurper)
 */

perf {
    flight {
        run {
            instance {
                id = "LogInfo"

                loadId = "SizeMedium"

                configId = "loglevelinfo"
                configToApplyList = [ "layermon", "loglevelinfo" ]

                numberSamples = 10
                numberUsersPerSample = 1

                saveLogSize = true

                perfLogFormat = "layermon"
            }
        }
    }
}
