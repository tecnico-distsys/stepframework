<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/flight</property>
        <property name="connection.username">step</property>
        <property name="connection.password"></property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">4</property>

        <!-- SQL dialect -->
        <property name="dialect">org.hibernate.dialect.MySQLInnoDBDialectBigDecimalPatched</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>

        <!-- format SQL in log and console -->
        <property name="hibernate.format_sql">false</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">validate</property>


        <!-- Class mappings  -->

        <!-- Classes from flight domain -->
        <mapping class="org.tripplanner.flight.domain.FlightManager" />
        <mapping class="org.tripplanner.flight.domain.Airplane" />
        <mapping class="org.tripplanner.flight.domain.Airport" />
        <mapping class="org.tripplanner.flight.domain.Flight" />
        <mapping class="org.tripplanner.flight.domain.FlightReservation" />
        <mapping class="org.tripplanner.flight.domain.Passenger" />
        

        <!-- Event listeners -->

        <!-- PerfHibernateListener is a Performance monitor -->

        <event type="pre-insert">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="pre-load">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="pre-update">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="pre-delete">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="pre-collection-recreate">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="pre-collection-remove">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="pre-collection-update">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>

        <event type="post-insert">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="post-load">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="post-update">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="post-delete">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="post-collection-recreate">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="post-collection-remove">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>
        <event type="post-collection-update">
            <listener class="step.framework.perf.monitor.perf4j.PerfHibernateListener"/>
        </event>

    </session-factory>

</hibernate-configuration>
