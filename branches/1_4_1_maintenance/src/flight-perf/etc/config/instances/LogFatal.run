/**
 *  Flight Performance run instance config
 *  (syntax http://groovy.codehaus.org/ConfigSlurper)
 */

perf {
    flight {
        run {
            instance {
                id = "LogFatal"

                loadId = "SizeMedium"

                configId = "loglevelfatal"
                configToApplyList = [ "layermon", "loglevelfatal" ]

                numberSamples = 10
                numberUsersPerSample = 1

                saveLogSize = true

                perfLogFormat = "layermon"
            }
        }
    }
}
