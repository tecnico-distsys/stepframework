<project name="flight-view" default="build" basedir=".">
    <!-- view build file -->

    <!-- before imports -->
    <property name="import-ant" value="../../import-ant" />

    <!-- IMPORTS -->
    <import file="${import-ant}/core.xml" />
    <import file="${import-ant}/library.xml" />
    <import file="${import-ant}/${jax-b-env}" />
    <import file="${import-ant}/jax-b.xml" />

    <!-- after imports -->

    <!-- classpaths -->
    <path id="compile.classpath">
        <pathelement location="${build.classes.rel-dir}" /> <!-- compiled code -->
        <path refid="project.lib.path" />
        <path refid="jax-b.jars.path" />
    </path>

    <!-- build -->
    <target name="build"
            depends="config,compile,build-jax-b,build-library"
            description="Build the project">
    </target>
    <!-- 'compile' must be executed before 'build-jax-b' and
         'build.classes.rel-dir' must be part of 'compile.classpath'
         because generated JAX-B classes extend BaseView class -->

</project>
