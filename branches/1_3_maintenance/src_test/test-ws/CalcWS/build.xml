<project name="CalcWS" default="build" basedir=".">

    <!-- before imports -->
    <property name="step-home" value="../../../src" />
    <property name="import-ant" value="${step-home}/import-ant" />

    <!-- use properties defined in STEP build.properties file -->
    <property file="${step-home}/build.properties" />

    <!-- IMPORTS -->
    <import file="${import-ant}/core.xml" />
    <import file="${import-ant}/${web-app-env}" />
    <import file="${import-ant}/${jax-ws-env}" />
    <import file="${import-ant}/jax-ws-server.xml" />
    <import file="${import-ant}/${ws-registry-env}" />
    <import file="${import-ant}/ws-registry.xml" />

    <!-- after imports -->

    <!-- classpaths -->
    <property name="jar.external.enabled" value="" />
    <path id="jar.external.path">
        <fileset dir="${step-home}/lib">
            <include name="*.jar" />
        </fileset>
    </path>

    <path id="compile.classpath">
        <pathelement location="${build.classes.rel-dir}" />
        <path refid="project.lib.path" />
        <path refid="jar.external.path" />
        <path refid="jax-ws.jars.path" />
    </path>

    <!-- Web Service -->
    <property name="jax-ws-server.wsdl.file-name" value="Calc.wsdl" />
    <property name="jax-ws-server.wsdl.namespace" value="http://calc" />
    <property name="jax-ws-server.wsdl.service-name" value="CalcService" />
    <property name="jax-ws-server.wsdl.port-name" value="CalcPort" />
    <property name="jax-ws-server.ties.package" value="calc.ws.ties" />
    <property name="jax-ws-server.ties.interface.simple-name" value="CalcPortType" />
    <property name="jax-ws-server.impl.package" value="calc.ws" />
    <property name="jax-ws-server.impl.class.simple-name" value="CalcServiceImpl" />

    <target name="-replace-jax-ws-server-custom-tokens(dir)">
        <replace dir="${dir}" token="@jax-ws-server.handler-chains@">
            <replacevalue><![CDATA[
                <jws:handler-chains xmlns:jws="http://java.sun.com/xml/ns/javaee">
                    <jws:handler-chain>
                        <jws:handler>
                            <jws:handler-class>step.framework.ws.handler.LoggingHandler</jws:handler-class>
                        </jws:handler>
                    </jws:handler-chain>
                </jws:handler-chains>
            ]]></replacevalue>
        </replace>
    </target>

    <!-- Web Service registration -->
    <property name="ws-registry.url" value="http://localhost:8080/RegistryServer/" />
    <property name="ws-registry.main-class" value="step.framework.ws.registry.Main" />
    <property name="dir" value="${build.config.ws-registry.rel-dir}" />

    <property name="ws-registry.publish.args" value="${dir}/Registry.properties publish ${dir}/Registration.properties ${dir}/RegistrationKey.properties" />
    <property name="ws-registry.delete.args" value="${dir}/Registry.properties delete key ${dir}/RegistrationKey.properties" />
    <property name="ws-registry.query.args" value="${dir}/Registry.properties query classification ${dir}/Registration.properties" />

    <!-- build -->
    <target name="build"
            depends="config,build-ws-registry,build-jax-ws-server"
            description="Build the project">
    </target>

</project>
