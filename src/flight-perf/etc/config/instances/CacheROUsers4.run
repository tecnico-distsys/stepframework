/**
 *  Flight Performance run instance config
 *  (syntax http://groovy.codehaus.org/ConfigSlurper)
 */

perf {
    flight {
        run {
            instance {
                id = "CacheROUsers4"

                loadId = "SizeMedium"

                configId = "ehcachereadonly"
                configToApplyList = [ "layermon", "layermon_ehcachereadonly" ]

                numberSamples = 10
                numberUsersPerSample = 4
                // will consume 40 load samples

                saveLogSize = true

                perfLogFormat = "layermon"
            }
        }
    }
}
